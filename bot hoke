import telebot
import random

# ضع توكن البوت هنا
TOKEN = "ضع_توكن_البوت_هنا"
bot = 7297788603:AAEjjz-g9tq9eU-i2sCyuGsAz5pfjmwCQbA

# قائمة المواضيع العشوائية للنقاش
topics = [
    "ما رأيكم في الذكاء الاصطناعي؟",
    "إذا كان عندك مليون دولار، وش بتسوي؟",
    "وش أفضل فيلم شفته مؤخرًا؟",
    "إذا قدرت تعيش في أي مدينة بالعالم، وين بتروح؟",
    "وش هواياتك المفضلة؟"
]

# قائمة الكلمات المحظورة
banned_words = ["سب", "كلام سيء", "شتيمة"]

# ردود عشوائية للبوت
responses = {
    "كيف حالك": ["تمام، وأنت؟", "الحمد لله، كيف أمورك؟"],
    "وش تسوي": ["جالس أسولف معكم!", "أقرأ رسائلكم وأرد عليكم."],
    "من انت": ["أنا بوت دردشة هنا عشان أسولف معكم!", "بوت تفاعلي يرد عليكم بكل حب."]
}

# عندما يرسل أحد رسالة، يتحقق البوت منها ويرد
@bot.message_handler(func=lambda message: True)
def handle_messages(message):
    text = message.text.lower()

    # التحقق من الكلمات المحظورة
    if any(word in text for word in banned_words):
        bot.reply_to(message, "⚠️ الرجاء احترام القروب، لا تستخدم كلمات غير لائقة!")
        return

    # الرد على بعض الجمل تلقائيًا
    for key, value in responses.items():
        if key in text:
            bot.reply_to(message, random.choice(value))
            return

    # طرح موضوع للنقاش عشوائيًا
    if "موضوع" in text or "وش نسولف" in text:
        bot.reply_to(message, "🤔 " + random.choice(topics))
        return

    # رد عام
    bot.reply_to(message, "أنا هنا عشان أسولف معكم! 😊")

# تشغيل البوت
bot.polling()
